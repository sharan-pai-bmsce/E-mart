<%- include('../common/header'); %>
<link rel="stylesheet" href="/css/styles-shop.css" />
<%- include('../common/navbar') %>
<style>
  .login-form {
    background-color: rgb(209, 235, 116);
    margin-top: 150px;
    padding: 20px;
    border-radius: 0.45rem;
  }
</style>
<div class="container">
  <form action="/new-password" method="post">
    <div class="form-group col-md-6" style="margin: auto">
      <div class="login-form">
        <div class="mb-3">
          <h1
            class="text-center"
            style="
              color: #124670;
              font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            "
          >
            E-MART
          </h1>
          <label for="new-password" class="ps-2 form-label">Enter the new password</label>
          <input
            name="newPassword"
            type="password"
            class="form-control"
            id="newPassword"
            aria-describedby="emailHelp"
          />
        </div>
        <div class="mb-3">
          <label for="confirm-password" class="ps-2 form-label">Confirm new password</label>
            <input
              type="password"
              name="confirmPassword"
              id="confirmNewPassword"
              class="form-control"
            />
          </div>
        <input type="hidden" name="id" value="<%= id %>" />
        <input type="hidden" name='token' value='<%= passwordToken %>'>
        <input type="hidden" name="_csrf" value="<%= token %>" />
        <div class="mb-3 text-center">
          <input
            type="submit"
            name="submit"
            value="Reset Password"
            class="btn btn-outline-dark"
            style="width: 50%"
          />
        </div>
      </div>
    </div>
  </form>
</div>

<%- include('../common/footer') %>
